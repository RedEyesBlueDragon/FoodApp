<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/home_Card1"
                android:layout_width="800dp"
                android:layout_height="150dp"
                android:padding="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:foregroundGravity="center_horizontal"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:id="@id/home_imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/home_imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/steak" />

                    <TextView
                        android:id="@+id/home_Food_title1"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="122dp"
                        android:gravity="left"
                        android:layout_marginLeft="28dp"
                        android:text="Dinner in the Sky"
                        android:textStyle="bold" />



                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/home_Card2"
                android:layout_width="800dp"
                android:layout_height="150dp"
                app:cardElevation="20dp"
                android:layout_below="@+id/home_Card1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:foregroundGravity="center_horizontal"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:id="@id/home_imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/home_imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pastahouse" />

                    <TextView
                        android:id="@+id/home_Food_title2"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="122dp"
                        android:gravity="left"
                        android:layout_marginLeft="28dp"
                        android:text="The Pasta House"
                        android:textStyle="bold" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/home_Card3"
                android:layout_width="500dp"
                android:layout_height="150dp"
                app:cardElevation="20dp"
                android:layout_below="@+id/home_Card2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:foregroundGravity="center_horizontal"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:id="@id/home_imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/home_imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pastac" />

                    <TextView
                        android:id="@+id/home_Food_title3"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="122dp"
                        android:gravity="left"
                        android:layout_marginLeft="28dp"
                        android:text="Red Bakery House"
                        android:textStyle="bold" />



                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/home_Card4"
                android:layout_width="500dp"
                android:layout_height="150dp"
                app:cardElevation="20dp"
                android:layout_below="@+id/home_Card3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:foregroundGravity="center_horizontal"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:id="@id/home_imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/home_imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cafe" />

                    <TextView
                        android:id="@+id/home_Food_title4"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="122dp"
                        android:gravity="left"
                        android:layout_marginLeft="28dp"
                        android:text="Flotsam and Jetsam"
                        android:textStyle="bold" />



                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/home_Card4">

            </TextView>

        </RelativeLayout>

    </ScrollView>




</RelativeLayout>




